<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#29144c">

        <com.example.androidremark.view.BlurMaskCircularView
            android:id="@+id/mask_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

        <com.example.androidremark.view.colorpicker.ColorPicker
            android:id="@+id/color_picker"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:color_wheel_thickness="12dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            android:src="@drawable/ic_withe_light" />

        <LinearLayout
            android:id="@+id/ll_seek_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_seek_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="饱和度"
                    android:textColor="#ffffff"
                    android:textSize="11sp" />

                <android.support.v7.widget.AppCompatSeekBar
                    android:id="@+id/seek1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:maxHeight="2.5dp"
                    android:minHeight="2.5dp"
                    android:progress="50"
                    android:progressDrawable="@drawable/seek_bar_withe"
                    android:thumb="@drawable/ic_thumb_circular" />

                <TextView
                    android:id="@+id/tv_seek1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textColor="#ffffff"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_seek_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="亮度    "
                    android:textColor="#ffffff"
                    android:textSize="11sp" />

                <android.support.v7.widget.AppCompatSeekBar
                    android:id="@+id/seek2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:maxHeight="2.5dp"
                    android:minHeight="2.5dp"
                    android:progress="50"
                    android:progressDrawable="@drawable/seek_bar_withe"
                    android:thumb="@drawable/ic_thumb_circular" />

                <TextView
                    android:id="@+id/tv_seek2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textColor="#ffffff"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_seek_name3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="色调    "
                    android:textColor="#ffffff"
                    android:textSize="11sp" />

                <android.support.v7.widget.AppCompatSeekBar
                    android:id="@+id/seek3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:maxHeight="2.5dp"
                    android:minHeight="2.5dp"
                    android:progress="50"
                    android:progressDrawable="@drawable/seek_bar_withe"
                    android:thumb="@drawable/ic_thumb_circular" />

                <TextView
                    android:id="@+id/tv_seek3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textColor="#ffffff"
                    android:textSize="11sp" />
            </LinearLayout>
        </LinearLayout>


    </FrameLayout>
</LinearLayout>
